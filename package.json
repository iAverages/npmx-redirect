{
    "name": "npmx-redirect",
    "displayName": "Npmx redirect",
    "version": "0.0.1",
    "description": "Simple extension to redirect npmjs.com to npmx.dev",
    "author": "Daniel Raybone <me@danielraybone.com>",
    "scripts": {
        "dev": "plasmo dev",
        "build": "plasmo build",
        "build:all": "pnpm build:chrome && pnpm build:firefox-mv2 && pnpm build:firefox && pnpm build:edge && pnpm build:brave && pnpm build:opera",
        "build:chrome": "plasmo build --target=chrome-mv3",
        "build:firefox-mv2": "plasmo build --target=firefox-mv2",
        "build:firefox": "plasmo build --target=firefox-mv3",
        "build:edge": "plasmo build --target=edge-mv3",
        "build:brave": "plasmo build --target=brave-mv3",
        "build:opera": "plasmo build --target=opera-mv3",
        "package": "plasmo package",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run"
    },
    "dependencies": {
        "@plasmohq/storage": "^1.15.0",
        "plasmo": "0.90.5",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.1.1",
        "@types/chrome": "0.0.258",
        "@types/node": "20.11.5",
        "@types/react": "18.2.48",
        "@types/react-dom": "18.2.18",
        "@types/webextension-polyfill": "^0.12.4",
        "@vitest/ui": "^4.0.18",
        "autoprefixer": "^10.4.24",
        "jsdom": "^28.0.0",
        "oxfmt": "^0.28.0",
        "postcss": "^8.5.6",
        "prettier": "3.2.4",
        "tailwindcss": "^3.4.19",
        "typescript": "5.3.3",
        "vitest": "^4.0.18",
        "webextension-polyfill": "^0.12.0"
    },
    "manifest": {
        "host_permissions": [
            "*://*.npmjs.com/*"
        ],
        "permissions": [
            "storage",
            "webNavigation"
        ]
    }
}
